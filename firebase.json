{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/home",
        "destination": "/home.html"
      },
      {
        "source": "/about",
        "destination": "/about.html"
      },
      {
        "source": "/portfolio",
        "destination": "/portfolio.html"
      },
      {
        "source": "/contact",
        "destination": "/contact.html"
      },
       {
        "source": "/qr",
        "destination": "/qr.html"
      },
    ]
  }
}
